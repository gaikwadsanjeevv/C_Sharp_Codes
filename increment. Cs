using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
 
namespace run_csharp_code
{
    class Program
    {
        static void Main(string[] args)
        {
            int i = 0; // initialization
 
            i++; // i incremented by one. It is post increment
 
            Console.WriteLine("The value of i is {0}", i);
 
            Console.ReadLine();
        }
    }
}
